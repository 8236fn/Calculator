<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:background="@drawable/frame"
        android:gravity="center_vertical|end"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/display"
        android:textAlignment="gravity"
        android:textColor="@android:color/black"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/btnFunction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnBack"
            style="@style/buttons"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="@string/btnBack" />

        <Button
            android:id="@+id/btnClear"
            style="@style/buttons"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:text="@string/btnClear" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/btnKeys"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn7"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btn7" />

            <Button
                android:id="@+id/btn8"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btn8" />

            <Button
                android:id="@+id/btn9"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btn9" />

            <Button
                android:id="@+id/btnAdd"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btnAdd" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn4"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btn4" />

            <Button
                android:id="@+id/btn5"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btn5" />

            <Button
                android:id="@+id/btn6"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btn6" />

            <Button
                android:id="@+id/btnSubtract"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btnSubtract" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn1"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btn1" />

            <Button
                android:id="@+id/btn2"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btn2" />

            <Button
                android:id="@+id/btn3"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btn3" />

            <Button
                android:id="@+id/btnMultiplay"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btnMultiply" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btnPoint"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btnPoint" />

            <Button
                android:id="@+id/btn0"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btn0" />

            <Button
                android:id="@+id/btnEquals"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btnEquals" />

            <Button
                android:id="@+id/btnDivided"
                style="@style/buttons"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/btnDivided" />
        </TableRow>
    </TableLayout>

</LinearLayout>